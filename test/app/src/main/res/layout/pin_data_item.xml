<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"


>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
    >

        <TextView
                android:id="@+id/pin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/holder_name"
                android:textColor="@android:color/white"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
        />


        <TextView
                android:id="@+id/pin_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/holder_description"
                android:textColor="@android:color/white"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
        />



        <TextView
                android:id="@+id/pin_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/holder_lat"
                android:textColor="@android:color/white"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
        />

        <TextView
                android:id="@+id/pin_lng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/holder_lng"
                android:textColor="@android:color/white"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
        />

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_usrpic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/gotenna"
        android:layout_gravity="center"
        />

        <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@android:color/white" />

    </LinearLayout>
</android.support.v7.widget.CardView>